<%-include("header") -%>
  <body>
    <div class="box" id="heading">
      <h1 style="color:blue"> <%=DayOfWeek%></h1>
    </div>
<div class="box">
    <%DataList.forEach(function(item){ %>
      <form  action="/delete" method="post">
        <div class="item">
          <input type="hidden" name="listname" value="<%=DayOfWeek%>">
          <input type="checkbox" name="checkbox" value="<%=item._id%>" onChange="this.form.submit()">
          <p><%=item.name%></p>
        </div>
      </form>

    <%});%>
    <form class="item" action="/" method="post">
      <input type="text" name="enteredItem" placeholder="New Item" autocomplete="off">
      <button type="submit" name="listName" value=<%= DayOfWeek %>>+</button>
    </form>
</div>
<%-include("footer") -%>
